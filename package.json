{
  "name": "toy-todo",
  "version": "1.0.0",
  "description": "Template for an Express backend",
  "main": "index.js",
  "scripts": {
    "start": "nodemon index.js",
    "mocha": "mocha --exit --file test/setup.test.js '!(node_modules)/**/*test.js'",
    "test": "NODE_ENV=test mocha --exit --file test/setup.test.js '!(node_modules)/**/*test.js' --watch",
    "cover": "nodemon --exec nyc --reporter=lcov --reporter=text-summary npm run mocha",
    "heroku": "node index.js",
    "travis": "npm run mocha"
  },
  "author": "Elias Mason <emason@thinkful.com>",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "mongoose": "^5.0.6",
    "morgan": "^1.9.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "mocha": "^5.0.4",
    "nyc": "^11.6.0"
  }
}
